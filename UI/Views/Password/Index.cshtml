@model PasswordViewModel
@inject BL.Factory _f


@{
    Model.PageTitle = _f.trawi("Obnovení zapomenutého hesla", Model.LangIndex);
    Layout = "~/Views/Shared/_LayoutAnonym.cshtml";

    var _returnurl = @Context.Request.Query["returnurl"];
}

@addTagHelper *, UI


<div class="container" style="max-width:800px;">

    <form id="form1" asp-action="Index" method="post">
        <input type="hidden" asp-for="LangIndex" />
        <h4>@_f.trawi("Obnovení zapomenutého hesla",Model.LangIndex)</h4>

        <div class="row mb-2">
            <label asp-for="@Model.Login" class="col-sm-4 col-form-label">@_f.trawi("Přihlašovací jméno (login) nebo e-mail", Model.LangIndex):</label>
            <div class="col-sm-8">
                <input asp-for="@Model.Login" class="form-control" autocomplete="username"/>
            </div>


        </div>

        <p></p>

        <button type="submit" class="btn btn-primary">@_f.trawi("Zaslat odkaz pro změnu hesla", Model.LangIndex)</button>
    </form>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <h4>@Html.Raw(Model.ErrorMessage)</h4>
        </div>
    }
    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success" role="alert">
            <h4>@Html.Raw(Model.SuccessMessage)</h4>
        </div>
    }
</div>