@model UI.Models.p91oper.p31editViewModel
@inject BL.Factory _f

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
    Model.PageTitle = _f.tra("Upravit položku vyúčtování") + ": " + Model.RecP91.p92Name + " / " + Model.RecP91.p91Code + " (" + Model.RecP91.p91Client + ")";
    Model.PageSymbol = "p91";

}

@addTagHelper *, UI




<div class="tabs_container_record">
    <div style="padding:10px;">
        <button type="button" id="cmdClose" onclick="_window_close()" class="btn btn-light">@_f.tra("Zavřít")</button>
    </div>
    <!-- Tab panes -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item onetab" role="presentation">
            <a id="link_tab1" class="nav-link active">@_f.tra("Upravit položku vyúčtování")</a>
        </li>
        <li class="nav-item onetab" role="presentation">
            <a id="link_tab4" class="nav-link" href="/p91oper/p31info?p31id=@Model.p31ID">@_f.tra("Detail položky")</a>
        </li>
        <li class="nav-item onetab" role="presentation">
            <a id="link_tab2" class="nav-link" href="/p91oper/p31remove?p31id=@Model.p31ID">@_f.tra("Vyjmout položku z vyúčtování")</a>
        </li>
        <li class="nav-item onetab" role="presentation">
            <a id="link_tab3" class="nav-link" href="/p91oper/p31move2invoice?p31id=@Model.p31ID">@_f.tra("Přesunout do jiného vyúčtování")</a>
        </li>

    </ul>
</div>

<div class="my-4">
    <button type="button" id="cmdOK" class="btn btn-success" onclick="_submit()">@_f.tra("Uložit změny")</button>
</div>

<form id="form1" asp-controller="p91oper" asp-action="p31edit" method="POST">
    <div style="max-width:800px;margin-top:20px;">

        <div class="row">
            <div class="col-auto">
                <div class="card">
                    <div class="card-header">
                        @_f.tra("Fakturační stav úkonu")
                    </div>
                    <div class="card-body">
                        <input type="radio" asp-for="@Model.SelectedP70ID" id="opg4" value="Vyfakturovano" onchange="_postback()" />
                        <label for="opg4">@_f.tra("Fakturovat")</label>
                        <br />
                        <input type="radio" asp-for="@Model.SelectedP70ID" id="opg6" value="ZahrnutoDoPausalu" onchange="_postback()" />
                        <label for="opg6">@_f.tra("Zahrnout do paušálu")</label>
                        <br />
                        <input type="radio" asp-for="@Model.SelectedP70ID" id="opg2" value="ViditelnyOdpis" onchange="_postback()" />
                        <label for="opg2">@_f.tra("Viditelný odpis")</label>
                        <br />
                        <input type="radio" asp-for="@Model.SelectedP70ID" id="opg3" value="SkrytyOdpis" onchange="_postback()" />
                        <label for="opg3">@_f.tra("Skrytý odpis")</label>
                        <br />
                    </div>
                </div>
            </div>

            <div class="col-auto">
                <table>
                    @if (Model.Rec.p33ID == BO.p33IdENUM.Cas)
                    {
                        <tr style="display:@Model.CssDisplayMoney">
                            <td>
                                @_f.tra("Hodiny k fakturaci"):
                            </td>
                            <td>
                                <myhours asp-for="@Model.Hours" showsettingbutton="true" hoursentryflag="@_f.CurrentUser.j02HesBitStream" hoursentryformat="@_f.CurrentUser.j02DefaultHoursFormat"></myhours>
                            </td>
                            <td>
                            </td>
                        </tr>
                        <tr style="display:@Model.CssDisplayMoney">
                            <td>
                                @_f.tra("Hodinová sazba"):
                            </td>
                            <td>
                                <mynumber asp-for="@Model.p31Rate_Billing_Invoiced"></mynumber>
                            </td>
                            <td>
                                @Model.RecP91.j27Code
                            </td>
                        </tr>
                        @if (Model.SelectedP70ID == BO.p70IdENUM.ZahrnutoDoPausalu)
                        {
                            <tr>
                                <td>
                                    @_f.tra("Hodiny v paušálu"):
                                </td>
                                <td>
                                    <myhours asp-for="@Model.Hours_FixPrice" cssstyle="background-color:pink" showsettingbutton="true" hoursentryflag="@_f.CurrentUser.j02HesBitStream" hoursentryformat="@_f.CurrentUser.j02DefaultHoursFormat"></myhours>
                                </td>
                                <td>
                                </td>
                            </tr>
                        }
                    }
                    @if (Model.Rec.p33ID == BO.p33IdENUM.Kusovnik)
                    {
                        <tr style="display:@Model.CssDisplayMoney">
                            <td>
                                @_f.tra("Počet k fakturaci"):
                            </td>
                            <td>
                                <mynumber asp-for="@Model.p31Value_Invoiced"></mynumber>
                            </td>
                            <td>
                            </td>
                        </tr>
                        <tr style="display:@Model.CssDisplayMoney">
                            <td>
                                @_f.tra("Sazba za kus"):
                            </td>
                            <td>
                                <mynumber asp-for="@Model.p31Rate_Billing_Invoiced"></mynumber>
                            </td>
                            <td>
                                @Model.RecP91.j27Code
                            </td>
                        </tr>
                    }
                    
                    @if (Model.Rec.p33ID == BO.p33IdENUM.PenizeBezDPH || Model.Rec.p33ID == BO.p33IdENUM.PenizeVcDPHRozpisu)
                    {
                        <tr style="display:@Model.CssDisplayMoney">
                            <td>
                                @_f.tra("Fakturační cena bez DPH"):
                            </td>
                            <td>
                                <mynumber asp-for="p31Amount_WithoutVat_Invoiced"></mynumber>
                            </td>
                            <td>
                                @Model.RecP91.j27Code

                                

                            </td>
                        </tr>

                        <tr style="display:@Model.CssDisplayMoney">
                            <td>
                                @_f.tra("Částka DPH"):
                            </td>
                            <td>
                                <mynumber asp-for="p31Amount_Vat_Invoiced"></mynumber>
                            </td>
                            <td>
                                @Model.RecP91.j27Code
                                <button type="button" class="btn btn-sm btn-light" onclick="local_recalc_vat()">Přepočítat DPH</button>
                            </td>
                        </tr>

                    }
                   
                    <tr style="display:@Model.CssDisplayMoney">
                        <td>
                            @_f.tra("Sazba DPH"):
                        </td>
                        <td>
                            <mynumber asp-for="p31VatRate_Invoiced"></mynumber>
                        </td>
                        <td>
                            %
                        </td>
                    </tr>

                    @if ((Model.Rec.p33ID == BO.p33IdENUM.PenizeBezDPH || Model.Rec.p33ID == BO.p33IdENUM.PenizeVcDPHRozpisu) && Model.Rec.p34IncomeStatementFlag == BO.p34IncomeStatementFlagENUM.Vydaj)
                    {
                        <tr>
                            <td>
                                @_f.tra("Kód dokladu"):
                            </td>
                            <td>
                                <input type="text" asp-for="p31Code" class="form-control" />
                            </td>
                            <td>
                            </td>
                        </tr>
                    }

                    <tr style="vertical-align:top;">
                        <td>
                            @_f.tra("Index třídění"):
                        </td>
                        <td>
                            <mynumber asp-for="p31Ordinary" class="record_ordinary" decimal-digits="0"></mynumber>
                        </td>
                        <td>
                            <mytooltip text="Pořadí položky v cenovém rozpisu faktury v režimu 1:1 po úkonech."></mytooltip>
                        </td>
                    </tr>
                </table>
            </div>
        </div>


        <textarea asp-for="p31Text" class="form-control"></textarea>
        <div class="my-2">
            <textarea class="form-control" asp-for="p31TextInternal" placeholder="@_f.tra("Interní text")" style="background-color:#FFF5EE !important;"></textarea>
        </div>
        <div>
            @Html.EditorFor(m => m.ff1, "~/Views/Shared/_FreeFields.cshtml")
        </div>

        <div class="my-2">
            <mystitky entity="p31Worksheet" asp-for="TagPids" tagnames="@Model.TagNames" taghtml="@Model.TagHtml" buttontext="@_f.tra("Oštítkovat")"></mystitky>
        </div>
    </div>


    <input type="hidden" asp-for="p31ID" />

</form>


<script type="text/javascript">
    $(document).ready(function () {




        _resize_textareas();

    })


    function local_recalc_vat() {
        _postback("recalc_vat");
    }

    function hardrefresh(pid, flag) {
        _postback();
    }
</script>

