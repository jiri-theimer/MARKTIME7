@inject Bas.PageService _ps

@{


}

<!DOCTYPE html>
<html lang="cs" data-theme="corporate">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – MARKTIME</title>

    

    <link rel="canonical" href="https://www.marktime.cz/">



    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daisyui@latest/dist/full.min.css">


 

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    
    <script src="~/js/site.js" asp-append-version="true"></script>


    <link href="/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />

   

    
</head>

<body class="bg-base-100 text-base-content">


    <div class="drawer">
        <input id="menu-drawer" type="checkbox" class="drawer-toggle" />

        <!-- PAGE CONTENT -->
        <div class="drawer-content flex flex-col">
            <header class="sticky top-0 z-50 bg-base-100 border-b border-base-200">
                <div class="navbar max-w-7xl mx-auto px-4">
                    <div class="flex-1">
                        <a href="/" class="text-xl font-semibold">
                            <h3>MT Mobile</h3>
                        </a>
                    </div>

                    <!-- Desktop menu -->
                    <div class="hidden lg:flex">
                        <ul class="menu menu-horizontal px-1">
                            <li><a href="/calendar">@_ps.tra("Kalendář")</a></li>
                            <li><a href="/reports">@_ps.tra("Tiskové sestavy")</a></li>
                        </ul>
                    </div>

                    <div class="flex gap-2">
                        @await Html.PartialAsync("~/Views/Shared/_lang.cshtml")
                        @await Html.PartialAsync("~/Views/Shared/_themes.cshtml")
                    </div>

                    <!-- Mobile hamburger -->
                    <div class="lg:hidden">
                        <label for="menu-drawer" class="btn btn-ghost btn-square" aria-label="Open menu">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </label>
                    </div>
                </div>
            </header>

            
        </div>

        <!-- Mobile drawer ONLY -->
        <div class="drawer-side z-50 lg:hidden">
            <label for="menu-drawer" class="drawer-overlay"></label>

            <ul class="menu p-4 w-72 min-h-full bg-base-100">
                <li>
                    <a href="/calendar" onclick="document.getElementById('menu-drawer').checked=false">
                        @_ps.tra("Kalendář")
                    </a>
                </li>
                <li>
                    <a href="/reports" onclick="document.getElementById('menu-drawer').checked=false">
                        @_ps.tra("Tiskové sestavy")
                    </a>
                </li>

                
            </ul>
        </div>
    </div>



    <main role="main" class="pb-3">
        @RenderBody()
    </main>



    @await Html.PartialAsync("~/Views/Shared/_footer.cshtml")



    
</body>
</html>



